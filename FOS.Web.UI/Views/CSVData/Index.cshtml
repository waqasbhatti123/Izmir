    function GenerateDetailGrid() {

        //$('#datatab tfoot th').each(function () {
        //    $(this).html('<input type="text" />');
        //});
        var oTable = $('#datatab').DataTable({
            "aLengthMenu": [[10, 25, 50, 75, 100], [10, 25, 50, 75, 100]],
            "iDisplayLength": 10,
            "paging": true,
            "pagingType": "full_numbers",
            "serverSide": true,
            "bRetrieve": true,
            "bDestroy": true,
            "autoWidth": true,
            "ajax":
            {
                "type": "POST",
                "url": '@Url.Action("GetPaymentData", "CSVData")',
                "contentType": 'application/json; charset=utf-8',
                'data': function (data)
                {
                    //data.RegionID = $('#ClientId').val();

                    return data = JSON.stringify(data);

                },

            },
            "fnDrawCallback": function (osetting) {

                var UpdateCheck = "0";
                var DeleteCheck = "0";

                if (UpdateCheck == "@HttpContext.Current.Session["UpdateCheck"]") { $(".edit").css("display", "none"); }
                else {
                    $(".edit").on("click", function () {

                        ClearForm();
                        $('#create').text('Update');

                        var CityID = $(this).attr("data-id");

                        try
                        {
                            $.ajax({
                                type: "POST",
                                url: "@Url.Action("GetByID", "IZBank")",
                                data: { ID: CityID },

                                success: function (Response) {
                                    debugger;
                                    if (Response != null) {
                                        $('#ID').val(Response.ID);
                                        $('#BankName').val(Response.BankName);
                                        $('#AccountNo').val(Response.AccountNo);
                                        $('#Status').val(Response.Status);
                                        $('html, body').animate({
                                            scrollTop: $("#main-content").offset().top
                                        }, 500);

                                        // $("#RegionID").focus();
                                        //location.reload();
                                    }
                                    else { alertify.error('Server Is Not Responding.'); }
                                }
                            });
                        }
                        catch (ex) { }

                    });
                }

                if (UpdateCheck == "@HttpContext.Current.Session["DeleteCheck"]") { $(".delete").css("display", "none"); }
                    else {
                        $(".delete").on("click", function () {

                            var CityID = $(this).attr("data-id");

                            // confirm dialog
                            alertify.confirm("Are You Sure You Want To Delete This Record ?  ", function (e) {
                                if (e) {

                                    $.ajax({
                                        type: "POST",
                                        url: "@Url.Action("DeleteProjects", "Setup")",
                                        data: { cityID: CityID },
                                        success: function (data) {

                                            if (data == "0") {
                                                alertify.success('Record Deleted Successfully');
                                                var table = $('#datatab').DataTable();
                                                table.row(this).remove().draw(false);
                                            }

                                            else { alertify.error('This City Assign To Someone, First Delete That Then You Can Able To Delete This City.'); }
                                        }

                                    });

                                } else { }
                            });

                        });
                    }

                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                    $("td:first", nRow).html(iDisplayIndex + 1);
                    return nRow;
                },
                "oLanguage": { "sSearch": "Search Month : " },
                "sDom": 'lftipr',
                "processing": true,
                "deferRender": true,
                "bSelect": true,
                "columns": [
                    { "data": "ID" , "sClass": "center-align-td"},
                    { "data": "RefNo" , "sClass": "center-align-td"},
                    { "data": "Name", "sClass": "center-align-td"},
                    { "data": "HouseNo", "sClass": "center-align-td"},
                    { "data": "MonthName", "sClass": "center-align-td"},
                    { "data": "DueDate", "sClass": "center-align-td"},
                    { "data": "Payable", "sClass": "center-align-td"},
                    { "data": "After", "sClass": "center-align-td"},
                    { "data": "AfterDate", "sClass": "center-align-td" },
                    {
                        "sClass": "center-align-td",
                        "mData": null,
                        "bSortable": false,
                        "mRender": function (data, type, row) {
                            return '<button class="btn btn-success edit" data-id=' + row.ID + '>' + '<i class=icon-pencil></i>' + '</button>';
                        }
                    }
                ],
                "order": [3, "dec"]

            });

        }

        $(document).ready(function () {

            $("#liSetup,#liCity").addClass("active");

            var WriteCheck = "0";

            if (WriteCheck == "@HttpContext.Current.Session["WriteCheck"]") {
            // $("#btnNew").css("display", "none");
            $("#btnNew").attr("disabled", true);
        }
        else {
            }



            $("#ClientId").change(function () {
            $('#Name').val('');
            $('#CityCode').val('');
            $('#ShortCode').val('');
            $('#datatab').dataTable().fnDestroy();
            GenerateDetailGrid();

        });

        $("#btnRefresh").click(function () {
            ClearForm();
        });

        GenerateDetailGrid();

    });
</script>
<script type="text/javascript">
    function ClearForm() {
        $('#ID').val("");
        $('#BankName').val("");
        $('#AccountNo').val("");
        $('#Status').val("");
        $('#Create').text('Create');
    }

    function OnSuccess(response) {

        if (response == "1") {
            alertify.success("Data Save Successfully.");
            $('#create').text('Create');
            var dt = $('#datatab').DataTable();
            dt.ajax.reload();
            ClearForm();
        }
        else if (response == "0") {
            alertify.error("Unable To Save Project  .");
        }
        else if (response == "2") {
            alertify.success("Updated Successfully");
            $('#create').text('Create');
            var dt = $('#datatab').DataTable();
            dt.ajax.reload();
            ClearForm();
        }
        else if (response == "3") {
            alertify.success("Updated Successfully");
            $('#create').text('Create');
            var dt = $('#datatab').DataTable();
            dt.ajax.reload();
            ClearForm();
        }
        else {
            alertify.error(response);
        }
        //location.reload();

    }

    function OnFailure(response) {
        if (response.status == 422) {
            var errors = JSON.parse(response.responseText);
            alertify.error(errors.errors);
        }
        else {
            alertify.error(response);
        }
    }
</script>